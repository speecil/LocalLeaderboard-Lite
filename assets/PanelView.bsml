<bg xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xsi:noNamespaceSchemaLocation='https://raw.githubusercontent.com/RedBrumbler/Quest-BSML-Docs/gh-pages/schema.xsd'>
  <horizontal id="prompt_root" pref-width="87" anchor-pos-y="10.3" pref-height="7" horizontal-fit="PreferredSize" child-align="UpperLeft" child-expand-width="false" spacing="1">
    <text id="promptText" text="Saving..." active="false" anchor-pos-x="0" anchor-pos-y="10" align="BottomLeft" italics="true" />
    <loading-indicator id="prompt_loader" active="~prompt-loader-active" preserve-aspect="true" pref-width="4" pref-height="4" />
  </horizontal>
    <horizontal id="container" pref-width="91" horizontal-fit="PreferredSize" vertical-fit="PreferredSize" spacing="3" bg="title-gradient" bg-color="#28b077" pad="2">
      <vertical pref-width="10" pref-height="10">
        <image id="LocalLeaderboard_logo" src="LocalLeaderboard_LocalLeaderboard_logo_png" preserve-aspect="true" pref-width="10" pref-height="10"/>
      </vertical>
      <vertical pref-width="0.5" pref-height="10">
        <image id="separator" src="LocalLeaderboard_pixel_png" pref-width="0.5" pref-height="10" size-delta-x="0.5" size-delta-y="10" />
      </vertical>
      <vertical active="true" pref-width="70" pref-height="10" spacing="-1">
        <text id="totalScores" text="" font-align="Left" active="false" italics="true"/>
        <text id="lastPlayed" text="" font-align="Left" active="false" italics="true"/>
      </vertical>
    </horizontal>
  </bg>